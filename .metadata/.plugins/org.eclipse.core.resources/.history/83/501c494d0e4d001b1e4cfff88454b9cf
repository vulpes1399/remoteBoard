<mapper namespace="test.remote.board.dao.BoardDao">

<resultMap type="Board" id="boardList">
<id property="id" column="id"/>
	<result property="error_type" column="error_type"/>
</resultMap>

	<select id="selectBoardList" resultType="Board">
		select * from board;
	</select>
	
	<select id="selectBoardDetailList" parameterType="String" resultType="Board">
		select * from board
		<where>
		<if test='error_type != ""'>
			and error_type = #{error_type}
		</if>
		<if test='sector != ""'>
			and sector = #{sector}
		</if>
		</where>
		
		<if test="listCount > 0">
			LIMIT #{offset}, #{listCount}
		</if>
	</select>
	
	 <select id="selectBoardListCount" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM Board;
        		<where>
		<if test='error_type != ""'>
			and error_type = #{error_type}
		</if>
		<if test='sector != ""'>
			and sector = #{sector}
		</if>
		</where>
	</select>
</mapper>